<h1>Sign up</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> form being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
		<table>
			<tr>
				<td><%= form.label :name %></td>
				<td><%= form.text_field :name %></td>
			</tr>
			<tr>
				<td><%= form.label :email %></td>
				<td><%= form.text_field :email %></td>
			</tr>
			<tr>
				<td><%= form.label :password %></td>
				<td><%= form.password_field :password %></td>
			</tr>
			<tr>
				<td><%= form.label :password_confirmation %></td>
				<td><%= form.password_field :password_confirmation %></td>
			</tr>
			<tr>
				<td colspan="2"><%= form.submit "Create my account" %></td>
			</tr>
		</table>
  </div>
<% end %>